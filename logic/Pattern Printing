int val = in.nextInt();
        for (int i = 1; i <=val ; i++) {
                    for(int j = i; j > 0; j--){
                        System.out.print('*');
                    }
                    System.out.println();
                }
        for (int i = val-1; i >= 1; i--) {
            for(int j = i; j > 0; j--){
                System.out.print('*');
            }
            System.out.println();
        }
