        for (int i = val; i >= 1; i--) {
            for(int j1 = i; j1 <= val-1; j1++){
                System.out.print(" ");
            }
            for (int j2 = 1; j2 <= i; j2++) {
                System.out.print("*");
            }
            System.out.println();
