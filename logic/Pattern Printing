        for (int i = 0; i < val; i++) {
            for (int j = 0; j < val; j++) {
                if(j == 0 || j == val-1 || i == 0 || i == val-1){
                    System.out.print("*");
                }
                else{
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
